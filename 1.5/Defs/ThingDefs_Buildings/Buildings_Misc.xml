<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<ThingDef Name="VQE_RuinedBuildingBase" Abstract="true" ParentName="BuildingBase">

	</ThingDef>
	<ThingDef Name="VQE_RuinedBuildingNaturalBase" Abstract="True">
		<category>Building</category>
		<selectable>true</selectable>
		<drawerType>MapMeshOnly</drawerType>
		<filthLeaving>Filth_RubbleRock</filthLeaving>
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<building>
			<artificialForMeditationPurposes>false</artificialForMeditationPurposes>
		</building>
	</ThingDef>
	<ThingDef ParentName="VQE_RuinedBuildingNaturalBase">
		<defName>VQE_GenetronJunk</defName>
		<label>ARC junk</label>
		<description>A twisted chunk of an ARC. Valuable parts are missing, and everything else is degraded to uselessness.</description>
		<thingClass>Building</thingClass>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<selectable>true</selectable>
		<fillPercent>0.5</fillPercent>
		<killedLeavings>
			<ChunkSlagSteel>2</ChunkSlagSteel>
		</killedLeavings>
		<rotatable>false</rotatable>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>0.5</Flammability>
		</statBases>
		<graphicData>
			<texPath>Things/AncientJunk/GenetronJunk</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
	</ThingDef>
	<ThingDef ParentName="VQE_RuinedBuildingBase">
		<defName>VQE_NuclearGenetronHusk</defName>
		<label>nuclear ARC husk</label>
		<description>A ruined husk of a nuclear ARC. Lack of maintenance or other unforeseen crisis has resulted in a devastating detonation that has twisted the metal into something quite unusable. This husk can be studied to learn how to construct and maintain a nuclear ARC, but can also be deconstructed to yield some resources back.</description>
		<graphicData>
			<texPath>Things/AncientJunk/NuclearGenetronHusk</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(9,9)</drawSize>
			<shadowData>
				<volume>(5.03,1.0,4.25)</volume>
				<offset>(0,0,-0.25)</offset>
			</shadowData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<blockWind>true</blockWind>
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<fillPercent>0.5</fillPercent>
		<blockLight>false</blockLight>
		<clearBuildingArea>false</clearBuildingArea>
		<statBases>
			<MaxHitPoints>2500</MaxHitPoints>
			<Flammability>0</Flammability>
			<Beauty>-30</Beauty>
		</statBases>
		<size>(6,6)</size>
		<costList>
			<Steel>440</Steel>
			<ComponentIndustrial>6</ComponentIndustrial>
			<ChunkSlagSteel>4</ChunkSlagSteel>
			<VQE_GenetronComponent>5</VQE_GenetronComponent>
		</costList>
		<rotatable>false</rotatable>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
			<destroySound>BuildingDestroyed_Metal_Big</destroySound>
		</building>
	</ThingDef>
</Defs>